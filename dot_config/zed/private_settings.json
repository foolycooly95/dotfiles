{
  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "llama3.2:latest"
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "buffer_font_family": "SeriousShanns Nerd Font Mono",

  // Theme Settings
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Light",
    "dark": "Tokyo Night"
  },

  // Language specific settings
  "languages": {
    "C": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["-style=file", "--assume-filename={buffer_path}"]
        }
      },
      "format_on_save": "on"
    }
  }
}
